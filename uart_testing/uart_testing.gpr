with "config/uart_testing_config.gpr";
project Uart_Testing is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Uart_Testing_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("uart_testing.adb");

   package Compiler is
      for Default_Switches ("Ada") use Uart_Testing_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Uart_Testing;
